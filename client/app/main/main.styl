//Image-opacity
.Container
    position: relative
    text-align: center
.image 
  opacity: 1
  transition: .5s ease
.middle
  transition: .5s ease
  opacity: 0
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%, -50%)
  -ms-transform: translate(-50%, -50%)
  text-align: center
.Container:hover .image
  opacity: 0.3
.Container:hover .middle
  opacity: 1
.text
  color: black
//END Image-opacity

